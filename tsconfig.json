{
    "__COMMENT__": "as in https://vite.new/vue-ts",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noErrorTruncation": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "types": ["vitest/importMeta"],
        "useDefineForClassFields": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue"]
}
